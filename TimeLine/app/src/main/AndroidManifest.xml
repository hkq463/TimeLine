<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lxn.timeline">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="lxn.timeline.ActivityLinearLayoutDemo"
            android:label="@string/title_activity_activity_linear_layout_demo" >
        </activity>
        <activity
            android:name="lxn.timeline.ActivityListViewDemo"
            android:label="@string/title_activity_activity_list_view_demo" >
        </activity>
    </application>

</manifest>